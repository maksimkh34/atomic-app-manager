<Window x:Class="atomic_app_manager.CreateHomeDirStartup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:atomic_app_manager"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="Выбор домашней директории"
        Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Выберите домашнюю директорию: </TextBlock>
                <TextBox Margin="0,5,0,5" Width="270"></TextBox>
                <Button Margin="5" Width="80">Обзор</Button>
            </StackPanel>
            <Button Width="190" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5">Подтвердить</Button>
        </StackPanel>
    </Grid>
</Window>
