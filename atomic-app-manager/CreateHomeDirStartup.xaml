<Window x:Class="atomic_app_manager.CreateHomeDirStartup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:atomic_app_manager"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Выбор домашней директории"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <StackPanel ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5">Выберите домашнюю директорию: </TextBlock>
                <TextBox Margin="0,5,0,5" Width="270" Name="HomeDir_tb"></TextBox>
                <Button Margin="5" Width="80" Click="SelectPath_b">Обзор</Button>
            </StackPanel>
            <Button Width="190" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,5"  Click="Accept_b">Подтвердить</Button>
        </StackPanel>
    </Grid>
</Window>
